{
  "manifest_version": 2,
  "name": "WP Engine Mini",
  "description": "A browser extension for handling WP Engine Backups",
  "permissions": [
    "<all_urls>",
    "*://*/*"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png",
    "512": "icons/icon512.png"
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "WP Engine Mini",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png",
      "512": "icons/icon512.png"
    }
  },
  "version": "0.1.2",
  "content_security_policy": "script-src 'self' ; object-src 'self'"
}